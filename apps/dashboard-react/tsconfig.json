// apps/dashboard-react/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noEmit": false,

    // ◀─── Adicionadas estas linhas:
    "baseUrl": ".",  
    "paths": {
      "@my-cards/*": ["../components/my-cards/*"]
    }
  },
"include": [
  "src",
  "src/**/*.d.ts",
  "src/global.d.ts",
  "../components/my-cards/**/*"
]
}
