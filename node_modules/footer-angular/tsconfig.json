{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {}
  },
  "include": [
    "src",
    "src/**/*.d.ts",
    "../types/global-assets.d.ts",
    "../components/my-cards/**/*",
    "../components/my-cards/**/*"
  ]
}
